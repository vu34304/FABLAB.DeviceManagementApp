            <TabItem IsEnabled="False"
              Style="{StaticResource TabItemStyle}"
              Background="DarkBlue"
              Height="50">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

                        <HeaderedContentControl        Content="GIÁM SÁT"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontSize="30"
                                           Foreground="White"
                                           FontWeight="Bold"/>
                    </StackPanel>
                </TabItem.Header>
                <device:DeviceManagementNavigationView DataContext="{Binding DeviceManagementNavigation}"/>
            </TabItem>

            <TabItem 
             Style="{StaticResource TabItemStyle}" 
             Height="50">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <materialDesign:PackIcon Kind="Home" 
                          Width="30" Height="30" 
                          HorizontalAlignment="Left" 
                          VerticalAlignment="Center" 
                          Margin="-30,0,5,0"/>
                        <HeaderedContentControl  Content="FabLab"
                                      HorizontalAlignment="Right"
                                      FontSize="20"
                                      FontWeight="Bold" Margin="0 0 100 0 " />
                    </StackPanel>
                </TabItem.Header>


            </TabItem>
            <TabItem 
             Style="{StaticResource TabItemStyle}" 
             Height="50">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <materialDesign:PackIcon Kind="Home" 
                                          Width="30" Height="30" 
                                          HorizontalAlignment="Center" 
                                          VerticalAlignment="Center" 
                                          Margin="-30,0,5,0"/>
                        <HeaderedContentControl  Content="Cơ sở 2"
                                                      HorizontalAlignment="Center"
                                                      FontSize="20"
                                                      FontWeight="Bold" Margin="0,0,100,0" />
                    </StackPanel>
                </TabItem.Header>
              

            </TabItem>
        </TabControl>
    </Grid>
